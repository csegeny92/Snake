<Window x:Name="Snake" x:Class="Snake_TZWKTT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="Start" HorizontalAlignment="Center" Height="40" Margin="10" VerticalAlignment="Center" Width="110" FontFamily="Showcard Gothic" Click="Button_Click"/>
        <Button Grid.Row="2" Content="Score List" HorizontalAlignment="Center" Height="40" Margin="10" VerticalAlignment="Center" Width="110" FontFamily="Showcard Gothic" Click="Button_Click_1"/>
        <Button Grid.Row="3" Content="Options" HorizontalAlignment="Center" Height="40" Margin="10" VerticalAlignment="Center" Width="110" FontFamily="Showcard Gothic" Click="Button_Option_Click"/>
        <Label Grid.Row="0" Content="SNAKE GAME" HorizontalAlignment="Center" Height="40" Margin="10" VerticalAlignment="Center" Width="120" FontFamily="Showcard Gothic" FontSize="18"/>
    </Grid>
</Window>
