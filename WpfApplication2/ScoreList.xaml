<Window x:Class="Snake_TZWKTT.ScoreLists"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScoreList" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="Exit" HorizontalAlignment="Center" Height="50" Margin="10" VerticalAlignment="Top" Width="198.507" FontFamily="Showcard Gothic" FontSize="18" Click="Button_Click"/>
        <ListBox Grid.Row="0" ItemsSource="{Binding Scorelist}" Name="ListBox1" Height="170" Margin="10" />
    </Grid>
</Window>
